
<a class="button" href="/cranes/new">Spot a New Crane</a>
<a class="button" href="http://sfcranes.tumblr.com">View Crane Photos</a>
<div id="map-canvas"></div>

<script>
  $(document).ready(function () {
    hardHat.initMap();
    <% @cranes.each do |crane| %>
      hardHat.placeMarker("<%= sanitize crane.lat %>","<%= sanitize crane.lon %>","<%= sanitize crane.title || 'A crane' %>");
    <% end %>
  });
</script>